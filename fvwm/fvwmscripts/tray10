WindowTitle {tray10}
WindowSize  123 24
Font "xft:Sans:style=Bold:size=9" 

Init
 Begin
  Set $RAMu = (GetOutput {exec ~/.fvwm/scripts/mem_usage.sh} 1 -1) 

  ChangeTitle 1 $RAMu
 End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $RAMu = (GetOutput {exec ~/.fvwm/scripts/mem_usage.sh} 1 -1)

   ChangeTitle 1 $RAMu
  End
 End

Widget 1
Property
 Position 0 0
 Size 123 24
 Font "xft:Sans:style=Bold:size=8"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
